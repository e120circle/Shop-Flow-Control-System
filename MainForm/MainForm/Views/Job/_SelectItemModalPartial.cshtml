                    </a>
                }
                else
                {
                    <a asp-action="ItemSort" class="sort-link" asp-route-sort="-Allocated_quantity" id="Allocated_quantity_sort_btn" name="SortATag">
                        <label asp-for="@Model.ItemVM.Allocated_quantity"></label>
                    </a>
                }
            </th>
            <th>
                @if (Model.Item_Sort_str == "-Available_quantity")
                {
                    <a asp-action="ItemSort" class="sort-link" asp-route-sort="Available_quantity" id="Available_quantity_sort_btn" name="SortATag">
