                    </a>
                }
            </th>
            <th>
                @if (Model.Item_Sort_str == "-Safety_stock_quantity")
                {
                    <a asp-action="ItemSort" class="sort-link" asp-route-sort="Safety_stock_quantity" id="Safety_stock_quantity_sort_btn" name="SortATag">
                        <label asp-for="@Model.ItemVM.Safety_stock_quantity"></label>
                    </a>
                }
                else
                {
                    <a asp-action="ItemSort" class="sort-link" asp-route-sort="-Safety_stock_quantity" id="Safety_stock_quantity_sort_btn" name="SortATag">
                        <label asp-for="@Model.ItemVM.Safety_stock_quantity"></label>
                    </a>
                }
            </th>
            <th>
                @if (Model.Item_Sort_str == "-Minimum_order_quantity")
                {
                    <a asp-action="ItemSort" class="sort-link" asp-route-sort="Minimum_order_quantity" id="Minimum_order_quantity_sort_btn" name="SortATag">
                        <label asp-for="@Model.ItemVM.Minimum_order_quantity"></label>
                    </a>
                }
                else
                {
                    <a asp-action="ItemSort" class="sort-link" asp-route-sort="-Minimum_order_quantity" id="Minimum_order_quantity_sort_btn" name="SortATag">
                        <label asp-for="@Model.ItemVM.Minimum_order_quantity"></label>
                    </a>
                }
            </th>
            @*<th style="padding-left:0.5rem; padding-right:0.5rem; color:white;">@sharedLocalizer["function"]</th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model.ItemListInPaging)
        {
            <tr id="ItemRow" name="@item.Item_no">
                <td>@item.Item_no</td>
                <td>@item.Item_name</td>
                <td>@item.Item_description</td>
                <td>@item.On_hand_quantity</td>
                <td>@item.Allocated_quantity</td>
                <td>@item.Available_quantity</td>
                <td>@item.Safety_stock_quantity</td>
                <td>@item.Minimum_order_quantity</td>
            </tr>
        }
    </tbody>
</table>