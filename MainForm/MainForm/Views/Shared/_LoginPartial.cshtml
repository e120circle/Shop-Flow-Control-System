@using Microsoft.AspNetCore.Identity
@using MainForm.Areas.Identity.Data
@using Microsoft.AspNetCore.Mvc.Localization

@inject SignInManager<MainFormUsers> SignInManager
@inject UserManager<MainFormUsers> UserManager
@inject IHtmlLocalizer<MainForm.SharedResource> sharedLocalizer

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color:#6E6E6E;">Hello @UserManager.GetUserName(User)!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link" style="color: #6E6E6E;font-size: 13px;">@sharedLocalizer["logout_title"]</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">@sharedLocalizer["login_title"]</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">@sharedLocalizer["register_title"]</a>
        </li>
    }
</ul>
