@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer
@inject IHtmlLocalizer<MainForm.SharedResource> sharedLocalizer
@model MainForm.ViewModels.Organize.OrganizeViewModel

@section AddToHead{
    @*<link href="~/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/SettingMaterial.css" rel="stylesheet" />*@
}

@{ ViewBag.Title = @sharedLocalizer["Edit_Business_information"]; }

<div class="modal-content" style="padding-top:90px;">
    <form method="post" id="EditBusinessUnitForm">
        <div class="card-header">
            <h4 class="card-title">@sharedLocalizer["Edit_Business_information"]</h4>
        </div>
        <div class="card-body">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <div class="row">
                    <div class="col-3">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Company_id" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Company_id" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Company_id" class="form-control" readonly="readonly" />
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Business_unit_name" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Business_unit_name" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Business_unit_name" class="form-control" />
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Business_unit_id" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Business_unit_id" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Business_unit_id" class="form-control" readonly="readonly" />
                        </div>
                    </div>
                    <div class="col-3">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Business_unit_no" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Business_unit_no" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Business_unit_no" class="form-control" readonly="readonly" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Business_unit_description" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Business_unit_description" class="text-danger"></span>
                            </div>
                            <textarea asp-for="@Model.BusinessUnitViewModel.Business_unit_description" class="form-control" style="resize:none; min-height:70px;"></textarea>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row" hidden="hidden">
                    <div class="col">
                        <div class="form-group" style="margin:0;">
                            <div class="row" style="align-items:center; display:flex;">
                                <input asp-for="@Model.BusinessUnitViewModel.Is_enable" class="form-check-input" style="margin:1.25rem;" />
                                <label asp-for="@Model.BusinessUnitViewModel.Is_enable" class="form-check-label" style="margin-left:3rem;"></label>
                            </div>
                            <span asp-validation-for="@Model.BusinessUnitViewModel.Is_enable" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Create_by" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Create_by" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Create_by" class="form-control" readonly="readonly" />
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Create_date" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Create_date" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Create_date" class="form-control" readonly="readonly" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Last_update_by" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Last_update_by" class="text-danger"></span>
                            </div>
                            <select asp-for="@Model.BusinessUnitViewModel.Last_update_by" asp-items="@Model.LastUpdateUserList" class="form-control"></select>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="form-group">
                            <div class="row">
                                <label asp-for="@Model.BusinessUnitViewModel.Last_update_date" class="edit-label"></label>
                                <span asp-validation-for="@Model.BusinessUnitViewModel.Last_update_date" class="text-danger"></span>
                            </div>
                            <input asp-for="@Model.BusinessUnitViewModel.Last_update_date" class="form-control" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer text-right">
            <a type="button" class="btn btn-secondary" asp-controller="Organize" asp-action="Index">
                @sharedLocalizer["cancel"]
            </a>
            <button type="button" class="btn btn-danger" name="DeleteBusinessUnit"
                    asp-controller="Organize" asp-action="DeleteBusinessUnit" asp-route-id="@Model.BusinessUnitViewModel.Business_unit_id">
                @sharedLocalizer["delete"]
            </button>
            <button type="submit" class="btn btn-primary" name="SaveEditBusinessUnit"
                    asp-controller="Organize" asp-action="EditBusinessUnit" asp-route-id="@Model.BusinessUnitViewModel.Business_unit_id">
                @sharedLocalizer["save"]
            </button>
        </div>
    </form>
</div>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>//save edit business unit
        $(document).on("click", 'button[name="SaveEditBusinessUnit"]', function () {
            var url = $(this).attr('formaction');
            $.ajax({
                type: "post",
                url: decodeURIComponent(url),
                dataType: "html",
                data: $("#EditBusinessUnitForm").serialize(),
                success: function (result) {
                    if (result) {
                        $('body').html(result);
                    }
                },
                error: function () { alert('Error occurred in save edit business unit.'); }
            });
        });
        //save edit business unit</script>

    <script>//delete business unit
        $(document).on("click", 'button[name="DeleteBusinessUnit"]', function () {
            var confirmation = window.confirm("Are you sure?"); //confirmation variable will contain true/false.
            if (confirmation) {
                var url = $(this).attr('formaction');
                $.ajax({
                    type: "post",
                    url: decodeURIComponent(url),
                    dataType: "html",
                    success: function (result) {
                        if (result) {
                            $('body').html(result);
                        }
                    },
                    error: function () { alert('Error occurred in delete business unit.'); }
                });
            }
        });
            //delete business unit</script>
}