@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@section AddToHead{
    <link href="~/vendor/bootstrap-4.1/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/SettingMaterial.css" rel="stylesheet" />
}

@{
    ViewBag.Title = "權限管理";
}

<div class="container" style="padding-top:90px;">
    <div class="row" style="margin-right:10px; margin-left:10px">
        <h3 style="margin:auto">權限管理</h3>
        <a type="button" class="btn btn-outline-primary" asp-action="Create">
            <i class="fas fa-file-alt"></i>
            新增權限
        </a>
    </div>
    <div class="container" style="padding:0px">
        <div class="col-lg-12" style="overflow-x:auto;">
            <table class="responstable">
                <thead>
                    <tr>
                        <th>權限</th>
                        <th style="padding-left:0.5rem; padding-right:0.5rem;">編輯</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(model => item.Name)
                            </td>
                            <td>
                                <a class="btn btn-primary btn-rounded waves-effect" style="float:right; padding-left:0.5rem; padding-right:0.5rem;"
                                   asp-action="Update" asp-route-id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                    Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>