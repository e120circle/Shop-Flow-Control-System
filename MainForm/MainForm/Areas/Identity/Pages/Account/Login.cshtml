@page

@using Microsoft.AspNetCore.Mvc.Localization

@model LoginModel
@inject IHtmlLocalizer<MainForm.SharedResource> sharedLocalizer

@{
    ViewData["Title"] = @sharedLocalizer["login_title"]; 
     Layout = "~/Areas/Identity/Pages/_AuthLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="col-md-10 offset-md-1">
    <form id="account" method="post">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label>@sharedLocalizer["user"]</label>
            <div class="input-group">
                <div class="input-group-addon" style="border-top-left-radius:0.5rem; border-bottom-left-radius:0.5rem; font-size:24px;background-color:transparent;border-right:0px;">
                    <i class="fas fa-user-circle"></i>
                </div>
                <input asp-for="Input.Name" class="form-control" style="border-left:0px;" placeholder="Email or User Name"/>
            </div>
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        @*<div class="form-group">
            <label>@sharedLocalizer["email"]</label>
            <div class="input-group">
                <div class="input-group-addon" style="border-top-left-radius:0.5rem; border-bottom-left-radius:0.5rem; font-size:24px;background-color:transparent;border-right:0px;">
                    <i class="fas fa-user-circle"></i>
                </div>
                <input asp-for="Input.Email" class="form-control" style="border-left:0px;" placeholder="example@mail.com" />
            </div>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>*@
        <div class="form-group">
            <label>@sharedLocalizer["password"]</label>
            <div class="input-group">
                <div class="input-group-addon" style="border-top-left-radius:0.5rem; border-bottom-left-radius:0.5rem; font-size:24px;background-color:transparent;border-right:0px;">
                    <i class="fas fa-key"></i>
                </div>
                <input type="password" asp-for="Input.Password" class="form-control" style="border-left:0px;" placeholder="********"/>
            </div>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="row" style="align-items:center; display:flex;">
                <input asp-for="Input.RememberMe" class="form-check-input" style="margin:1.25rem;" />
                <label class="form-check-label" style="margin-left:3rem;">@sharedLocalizer["remember_me"]</label>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block">@sharedLocalizer["login_title"]</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
