@using Microsoft.AspNetCore.Mvc.Localization

@inject IHtmlLocalizer<MainForm.SharedResource> sharedLocalizer

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:90px;">
    <div class="col-md-6 offset-md-3">
        <div class="card login-logout-tab" style="border:0px;">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs" style="margin-left:0px;">
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Login' style="border:0px;">@sharedLocalizer["login_title"]</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href='/Identity/Account/Register' style="border:0px;">@sharedLocalizer["register_title"]</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    @RenderSection("Scripts", required: false)

    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}